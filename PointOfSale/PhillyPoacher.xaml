<UserControl x:Class="PointOfSale.PhillyPoacher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <CheckBox>Sirloin</CheckBox>
            <CheckBox>Onion</CheckBox>
            <CheckBox>Roll</CheckBox>
        </StackPanel>
        <Button Name="PPdone" Click="PPdone_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="40">
            Done
        </Button>
    </Grid>
</UserControl>
