<UserControl x:Class="PointOfSale.GardenOrcOmelette"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Background="Olive">
            <CheckBox FontSize="15" IsChecked="{Binding Path = Broccoli}">Broccoli</CheckBox>
            <CheckBox FontSize="15" IsChecked="{Binding Path = Mushrooms}">Mushrooms</CheckBox>
            <CheckBox FontSize="15" IsChecked="{Binding Path = Tomato}">Tomato</CheckBox>
            <CheckBox FontSize="15" IsChecked="{Binding Path = Cheddar}">Cheddar</CheckBox>
            
        </StackPanel>
        <Button Name="GOdone" Click="GOdone_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="40" FontSize="15" FontStyle="Italic" Background="Beige" FontWeight="Black">
            Done
        </Button>    
    </Grid>
</UserControl>
