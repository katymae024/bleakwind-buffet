<UserControl x:Class="PointOfSale.FriedMiraak"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Background="Olive">
            <CheckBox x:Name="SmallFM" Click="SmallFM_Click" FontSize="15" IsChecked="{Binding Path = Size}">Small</CheckBox>
            <CheckBox x:Name="MediumFM" Click="MediumFM_Click" FontSize="15" IsChecked="{Binding Path = Size}">Medium</CheckBox>
            <CheckBox x:Name="LargeFM" Click="LargeFM_Click" FontSize="15" IsChecked="{Binding Path = Size}">Large</CheckBox>
        </StackPanel>
        <Button Name="FMdone" Click="FMdone_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="40" FontSize="15" FontStyle="Italic" Background="Beige" FontWeight="Black">
            Done
        </Button>
    </Grid>
</UserControl>
