<UserControl x:Class="PointOfSale.DoubleDraugr"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <CheckBox>Bun</CheckBox>
            <CheckBox>Ketchup</CheckBox>
            <CheckBox>Mustard</CheckBox>
            <CheckBox>Cheese</CheckBox>
            <CheckBox>Pickle</CheckBox>
            <CheckBox>Tomato</CheckBox>
            <CheckBox>Lettuce</CheckBox>
            <CheckBox>Mayo</CheckBox>
            
        </StackPanel>
        <Button Name="DDdone" Click="DDdone_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="40">
            Done
        </Button>
    </Grid>
</UserControl>
