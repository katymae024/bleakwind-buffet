<UserControl x:Class="PointOfSale.CandlehearthCoffee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <CheckBox>Ice</CheckBox>
            <CheckBox>No Ice</CheckBox>
            <CheckBox>Small</CheckBox>
            <CheckBox>Medium</CheckBox>
            <CheckBox>Large</CheckBox>
            <CheckBox>Decaf</CheckBox>
            <CheckBox>No Decaf</CheckBox>
            <CheckBox>Room for Cream</CheckBox>
            <CheckBox>No Room for Cream</CheckBox>
           
        </StackPanel>
        <Button Name="CCdone" Click="CCdone_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="40">
            Done
        </Button>    
    </Grid>
</UserControl>
