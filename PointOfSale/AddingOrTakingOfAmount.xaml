<UserControl x:Class="PointOfSale.AddingOrTakingOfAmount"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="150">
    <Grid>

        <!--<Grid.RowDefinitions>
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>

        </Grid.ColumnDefinitions>
        <Button x:Name="PlusSign" Click="IncreaseQuantity" Grid.Column="0"  FontSize="30" VerticalAlignment="Center" HorizontalContentAlignment="Center">+</Button>
        <Button x:Name="SubtractSign" Click="DecreaseQuantity" Grid.Column="2" FontSize="30" VerticalAlignment="Center" HorizontalContentAlignment="Center">-</Button>
        <TextBlock x:Name="PQuantity" Grid.Column="1" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
    </Grid>
</UserControl>
